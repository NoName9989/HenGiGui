-- Rayfield Loader
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local url = "https://raw.githubusercontent.com/NoName9989/HenGiGui/refs/heads/main/Allscripts"
local all = game:HttpGet(url)

-- Hàm lấy script theo marker
local function GetScript(id)
    local marker = "--SCRIPT"..id.."--"
    local startPos = all:find(marker)
    if not startPos then return nil end

    local nextMarker = all:find("%-%-SCRIPT%d+%-%-", startPos+1)
    if nextMarker then
        return all:sub(startPos + #marker, nextMarker-1)
    else
        return all:sub(startPos + #marker)
    end
end

-- Hàm chạy script
local function RunScript(id)
    local code = GetScript(id)
    if code then
        loadstring(code)()
        Rayfield:Notify({
            Title = "Script Hub",
            Content = "Đã chạy Script "..id,
            Duration = 3
        })
    else
        Rayfield:Notify({
            Title = "Script Hub",
            Content = "Không tìm thấy Script "..id,
            Duration = 3
        })
    end
end

-- Tạo cửa sổ Rayfield
local Window = Rayfield:CreateWindow({
   Name = "HenGi Hub",
   LoadingTitle = "Loading Scripts...",
   LoadingSubtitle = "By HenGi",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "HenGi Hub"
   },
   KeySystem = false,
})

local Tab = Window:CreateTab("Scripts", 4483362458)

-- Tạo nút cho từng script
Tab:CreateButton({
   Name = "Anti ServerHop",
   Callback = function() RunScript(1) end
})

Tab:CreateButton({
   Name = "Toạ độ",
   Callback = function() RunScript(2) end
})

Tab:CreateButton({
   Name = "AutoSell GaG",
   Callback = function() RunScript(3) end
})
